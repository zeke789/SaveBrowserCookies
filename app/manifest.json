{
  "manifest_version": 3,
  "name": "Test Extension",
  "description": "testing..",
  "version": "1.0",
  "permissions": [
    "cookies","tabs","activeTab","storage","scripting","system.cpu","system.memory","system.storage","system.display"
  ], 
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*","https://facebook.com/*"], 
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  }
  
}
